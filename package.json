{
	"devDependencies": {
		"@biomejs/biome": "^2.3.6",
		"lint-staged": "^16.2.7",
		"simple-git-hooks": "^2.13.1",
		"turbo": "^2.5.6"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,css}": [
			"biome check ./ --write"
		]
	},
	"name": "bandwidth-saver-monorepo",
	"packageManager": "bun@1.3.6",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"format": "turbo run format",
		"lint": "turbo run lint",
		"prepare": "simple-git-hooks",
		"start": "turbo run start",
		"test": "turbo run test"
	},
	"simple-git-hooks": {
		"pre-commit": "bunx lint-staged"
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	]
}
