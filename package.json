{
	"dependencies": {
		"@solidjs/router": "^0.15.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.6",
		"simple-git-hooks": "^2.13.1"
	},
	"lint-staged": {
		"*": [
			"biome check --write --unsafe --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	},
	"name": "bandwidth-saver-monorepo",
	"private": true,
	"scripts": {
		"build": "bun run --filter '*' build",
		"dev:all": "bun dev:extension & bun dev:proxy",
		"dev:extension": "bun --cwd packages/extension dev",
		"dev:proxy": "bun --cwd packages/proxy dev",
		"prepare": "simple-git-hooks",
		"test": "bun run --filter '*' test"
	},
	"simple-git-hooks": {
		"pre-commit": "bunx lint-staged"
	},
	"workspaces": [
		"packages/*"
	]
}
