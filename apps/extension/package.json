{
	"dependencies": {
		"@bandwidth-saver/shared": "workspace:*",
		"@elysiajs/eden": "^1.4.5",
		"@kobalte/core": "^0.13.11",
		"@kobalte/tailwindcss": "^0.9.0",
		"@webext-core/messaging": "^2.3.0",
		"query-selector-shadow-dom": "^1.0.1",
		"solid-js": "^1.9.10",
		"tiny-lru": "^11.4.5",
		"valibot": "^1.2.0"
	},
	"description": "bandwidth-saver-and-monitor",
	"devDependencies": {
		"@bandwidth-saver/proxy": "workspace:*",
		"@biomejs/biome": "^2.3.6",
		"@iceman8911/unplugin-inline-enum": "^0.6.7",
		"@tailwindcss/vite": "^4.1.18",
		"@types/query-selector-shadow-dom": "^1.0.4",
		"@wxt-dev/auto-icons": "^1.1.0",
		"@wxt-dev/module-solid": "^1.1.4",
		"daisyui": "^5.5.13",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vitest": "^4.0.17",
		"wxt": "^0.20.11"
	},
	"name": "bandwidth-saver-and-monitor",
	"private": true,
	"scripts": {
		"build": "bun run build:chromium & bun run build:firefox",
		"build:chromium": "wxt zip",
		"build:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"dev": "bun run dev:chromium & bun run dev:firefox",
		"dev:chromium": "wxt",
		"dev:firefox": "wxt -b firefox",
		"format": "biome format ./ --write",
		"lint": "biome lint ./ --write",
		"postinstall": "wxt prepare",

		"start": "echo 'No start command for extension'",
		"test": "vitest"
	},
	"trustedDependencies": [
		"spawn-sync"
	],
	"type": "module",
	"version": "0.0.1"
}
